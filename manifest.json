

{
    "manifest_version": 3,

    "name": "ADHD Tools",
    "description": "A productivity tool for people with ADHD.",
    "version": "1.0.1",
  
    "action": {
      "default_popup": "popup.html",
      "default_title": "ADHD Tools"
    },

    "background": {
      "service_worker": "scripts/background.js",
      "type": "module"
    },

    "icons": {
        "128": "images/icon_128.png"
    },

    "permissions": [
      "tabs",
      "storage"
    ]
  }